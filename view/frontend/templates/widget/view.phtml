<?php
 $slides = $block->getSlidesData();
 if(count($slides)):
?>

 <?= $block->getStylesheets() ?>

 <div id="<?= $block->getId() ?>" class="usslick__slider">

  <?php
   foreach($slides as $slide):
    $index = $slide['id'];
    $data = $slide['data'];
    $enabled = $data['enabled'];
    $title = $data['title'];
    $alt = $data['alt'];
    $link = $data['link'];
    $image = $data['image'];
    $getLink = $block->getLink($link);
    $getTarget = $block->getTarget($link);
    $getImage = $block->getImage($image);
   ?>

  <?php if($enabled && $image): ?>

  <div class="usslick__slide<?= $index ?> usslick__slide">

   <div class="usslick__slide--inner">
   
    <?php if($getLink) : ?>
    <a href="<?= $getLink ?>" title="<?= $title ?>" class="usslick__slide--link" <?= $getTarget ?>>
    <?php else: ?>
    <div class="usslick__slide--unlink">
    <?php endif; ?>

     <img src="<?= $getImage ?>" alt="<?= $alt ?>" title="<?= $title ?>" class="usslick__slide--image" />

    <?php if($getLink) : ?>
    </a>
    <?php else: ?>
    </div>
    <?php endif; ?>

   </div>

  </div>
  <?php endif; ?>

  <?php endforeach; ?>

 </div>

 <?= $block->getScript() ?>

<?php endif; ?>