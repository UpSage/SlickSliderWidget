<?php
 $data = $block->getData('slider_data');
?>

<pre><?= json_encode($data['slides'], JSON_PRETTY_PRINT); ?></pre>

<?php if(count($block->getSlides($data))): ?>

 <div class="usslick__slider" data-slick='<?= $block->getSettings($data) ?>'>

  <?php
   foreach($block->getSlides($data) as $item):
    $status = $item['status'];
    $title = $item['title'];
    $alt = $item['alt'];
    $link = $item['link'];
    $image = $item['image'];
    $getLink = $block->getLink($link);
    $getImage = $block->getImage($image);
    $isNewTab = $block->isNewTab($link);
   ?>
   
  <?php if($status && $image): ?>
  <div class="usslick__slide">
    
   <?php if($getLink) : ?>
   <a href="<?= $getLink ?>" title="<?= $title ?>" class="usslick__slide--link" <?= ($isNewTab) ? 'target="_blank"': '' ?>>
   <?php else: ?>
   <div class="usslick__slide--unlink">
   <?php endif; ?>

    <img src="<?= $getImage ?>" alt="<?= $alt ?>" title="<?= $title ?>" class="usslick__slide--image" />

   <?php if($getLink) : ?>
   </a>
   <?php else: ?>
   </div>
   <?php endif; ?>

  </div>
  <?php endif; ?>

  <?php endforeach; ?>

 </div>

<?php endif; ?>